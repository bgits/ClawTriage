# App runtime
PORT=3000
WORKER_CONCURRENCY=4
# Generate with: openssl rand -hex 32
DASHBOARD_TOKEN=change-me
# Dashboard auth mode: auto|required|disabled.
# - auto: require token only when NODE_ENV=production
# - required: always require token
# - disabled: bypass dashboard auth checks
DASHBOARD_AUTH_MODE=auto
# Optional path to built dashboard assets served by API in production.
# If unset, API attempts apps/dashboard/dist.
# DASHBOARD_STATIC_DIR=/app/apps/dashboard/dist
# Required for POST /api/ops/public-scan trigger endpoint auth.
# Generate with: openssl rand -hex 32
OPS_TRIGGER_TOKEN=change-me
# Comma-separated owner/repo allowlist for ops-triggered public scans.
# Empty means deny all.
PUBLIC_SCAN_ALLOWED_REPOS=openclaw/openclaw
# Optional for dashboard app when not using the default Vite dev proxy:
# VITE_API_BASE_URL=http://localhost:3000
# Optional fixed dashboard repository selection (single-repo mode):
# VITE_DASHBOARD_REPO_ID=123456789
# VITE_DASHBOARD_REPO_OWNER=openclaw
# VITE_DASHBOARD_REPO_NAME=openclaw

# GitHub App
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=change-me
CHECK_RUN_NAME=ClawTriage Duplicate Triage
GITHUB_TOKEN=  # optional, used for public read-only scans on public repositories

# Storage
# In Fly single-instance mode, start script defaults to local values:
# DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/clawtriage
# REDIS_URL=redis://127.0.0.1:6379
DATABASE_URL=postgres://postgres:postgres@localhost:5432/clawtriage
REDIS_URL=redis://localhost:6379

# Deterministic versioning
SIGNATURE_VERSION=1
ALGORITHM_VERSION=1
REVIEW_SCORE_THRESHOLD=0.55
